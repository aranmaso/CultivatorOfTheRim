<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<!-- EnergyTrackers - Qi Foundation -->
	<ItsSorceryFramework.EnergyTrackerDef ParentName = "ISF_EnergyTrackerBase">
		<defName>CTR_QiEnergyTracker</defName>
		<label>qi energy</label>
		
		<energyUnitStatDef>CTR_QiEnergyCost</energyUnitStatDef>
		<energyMaxStatDef>CTR_QiEnergyMax</energyMaxStatDef>
		<energyMinStatDef>CTR_QiEnergyMin</energyMinStatDef>
		<!-- <energyRecoveryStatDef>CTR_QiEnergyRecovery</energyRecoveryStatDef> -->
		
		<!-- <energyLabelKey>CTR_QiTracker</energyLabelKey> -->
		<disableReasonKey>CTR_QiTrackerDisabledReason</disableReasonKey>		
		<comps>
			<li Class = "ItsSorceryFramework.EnergyTrackerCompProperties_PerTick">
				<energyRecoveryStatDef>CTR_QiEnergyRecovery</energyRecoveryStatDef>
				<overchargeRecoveryFactor>-0.5</overchargeRecoveryFactor>
				<deficitRecoveryFactor>0.5</deficitRecoveryFactor>
			</li>
			<li Class = "ItsSorceryFramework.EnergyTrackerCompProperties_OnConsume">
				<consumables>
					<li>
						<thingDef>CTR_QiCondensingPill</thingDef>
						<energy>2.5</energy>
					</li>
					<li>
						<thingDef>CTR_NascentQiPill</thingDef>
						<energy>10.0</energy>
					</li>
					<li>
						<thingDef>CTR_SaintQiPill</thingDef>
						<energy>25.0</energy>
					</li>
					<li>
						<thingDef>CTR_ImmortalQiPill</thingDef>
						<energy>50.0</energy>
					</li>
				</consumables>
			</li>
		</comps>
	</ItsSorceryFramework.EnergyTrackerDef>
	

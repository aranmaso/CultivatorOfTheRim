	<RecipeDef>
		<defName>CTR_MakeTalisman</defName>
		<label>make Talisman</label>
		<description>making talisman require \n5 of Raw Resource or Cultivation Resource, \n5 of Spiritual Plant, \n1 blank talisman paper. \n\nthe outcome depend on the combination of first ingredient and Spiritual Plant. invalid combination will return a ruined paper.</description>
		<workerClass>CultivatorOfTheRim.RecipeWorker_MixingIngredient</workerClass>
		<jobString>drawing talisman</jobString>
		<effectWorking>Sculpt</effectWorking>
		<soundWorking>Recipe_Drug</soundWorking>
		<workAmount>1000</workAmount>
		<workSkill>Intellectual</workSkill>
		<recipeUsers>
			<li>DrugLab</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Cultivation_Resource</li>
						<li>Cultivation_Pill</li>
						<li>Medicine</li>
						<li>ResourcesRaw</li>
					</categories>
					<!-- <thingDefs> -->
						<!-- <li>Steel</li> -->
						<!-- <li>Plasteel</li> -->
						<!-- <li>Uranium</li> -->
						<!-- <li>WoodLog</li> -->
					<!-- </thingDefs> -->
				</filter>
				<count>5</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>Spirit_PlantProduct</li>
					</categories>
				</filter>
				<count>5</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>CTR_TalismanPaper</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>Cultivation_Resource</li>
				<li>Medicine</li>
				<li>ResourcesRaw</li>
				<li>Spirit_PlantProduct</li>
			</categories>		
		</fixedIngredientFilter>
		<products>
			<!-- <CTR_QiCondensingPill>1</CTR_QiCondensingPill> -->
		</products>
		<skillRequirements>
			<Intellectual>10</Intellectual>
   		 </skillRequirements>
		<researchPrerequisite>CTR_TalismanMaking</researchPrerequisite>
		<modExtensions>
			<li Class="CultivatorOfTheRim.RecipeExtension_MixingIngredient">
				<allowedCultivationLevel>
					<li>CTR_CoreShapingOrAbove</li>
				</allowedCultivationLevel>
				<failedProduct>CTR_RuinedTalismanPaper</failedProduct>
				<count>1</count>
				<combinations>
					<li>
						<firstTag>Metal_Qi</firstTag>
						<secondTag>Earth_Qi</secondTag>
						<result>CTR_TalismanShield</result>
					</li>
					<li>
						<firstTag>Fire_Qi</firstTag>
						<secondTag>Fire_Qi</secondTag>
						<result>CTR_TalismanFireSpew</result>
					</li>
					<li>
						<firstTag>Healing_Item</firstTag>
						<secondTag>Qi_Condensing_Ingredient</secondTag>
						<result>CTR_TalismanImmunity</result>
					</li>
					<li>
						<firstTag>Neutral_Qi</firstTag>
						<secondTag>Fire_Qi</secondTag>
						<result>CTR_TalismanSpeed</result>
					</li>
					<li>
						<firstTag>Nascent_Qi</firstTag>
						<secondTag>Yang_Qi</secondTag>
						<result>CTR_TalismanSmart</result>
					</li>
